{
  "name": "nixmessages",
  "version": "1.0.2",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --linux dir"
  },
  "build": {
    "appId": "com.nixmessages.app",
    "productName": "NixMessages",
    "files": [
      "**/*"
    ],
    "linux": {
      "target": "dir",
      "category": "Network",
      "icon": "icon.png"
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.9.0"
  }
}


